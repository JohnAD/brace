#!/usr/local/bin/cz --

Main()
	sched_init()
	new(r, Reader)
	new(w, Writer)
#	name(r, "reader")
#	name(w, "writer")
	shuttle(sh, cstr, r, out, w, in)

	start(r) ; start(w) ; run()

proc Reader()
	port cstr out
	repeat
		state cstr c = Input()
		wr(out, c)
		if c == NULL
			break
		yield()

proc Writer()
	port cstr in
	repeat
		state cstr s
		rd(in, s)
		if s == NULL
			break
		Say(s)


use b

shuttle(cstr)
