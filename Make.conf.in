# generic Make.conf.in
export
MAJOR=0
VERSION=0.0

destdir=
realprefix=/usr/local
prefix=$(destdir)$(realprefix)
bindir=$(prefix)/bin
sbindir=$(prefix)/sbin
libdir=$(prefix)/lib
cgibindir=$(libdir)/cgi-bin
perldir=$(prefix)/lib/perl5/site_perl
includedir=$(prefix)/include
datadir=$(prefix)/share
langdir=$(destdir)/lang
srcdir=.

OPTIMIZE=1
DEBUG=1
PROFILE=
CC=gcc -pedantic -std=gnu99
CFLAGS:=-Wall -I'$(srcdir)/lib' $(CFLAGS)
LDFLAGS:=-L'$(srcdir)/lib' $(LDFLAGS) -s
